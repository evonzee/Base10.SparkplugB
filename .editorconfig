root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.cs]
dotnet_sort_system_directives_first = true
